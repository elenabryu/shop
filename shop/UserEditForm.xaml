<Window x:Class="shop.UserEditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shop"
        mc:Ignorable="d"
        Height="268"
        Width="563"
        Title="Добавить/Редактировать пользователя" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Opacity" Value="0.7" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Cursor" Value="Arrow" />
            <Setter Property="BorderBrush" Value="#FF5FBBD4" />
            <Setter Property="Panel.ZIndex" Value="-2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#FF5FBBD4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#FF5FBBD4" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/фон.jpg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Title -->
            <RowDefinition Height="Auto" />
            <!-- Employee Selection -->
            <RowDefinition Height="Auto" />
            <!-- Login Information -->
            <RowDefinition Height="Auto" />
            <!-- Password Information -->
            <RowDefinition Height="Auto" />
            <!-- Role Selection -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
            <RowDefinition Height="*" />
            <!-- Spacer -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->

        <!-- Employee Selection -->
        <Label Grid.Row="1"
               Grid.Column="0"
               Content="Сотрудник:"
               Margin="10,10,10,0"
               VerticalAlignment="Center" />
        <ComboBox x:Name="EmployeeComboBox"
                  Grid.Row="1"
                  Grid.Column="1"
                  Width="300"
                  HorizontalAlignment="Left"
                  Margin="10,10,10,0"
                  DisplayMemberPath="FullName"
                  SelectedValuePath="EmployeeID" />

        <!-- Login Information -->
        <Label Grid.Row="2"
               Grid.Column="0"
               Content="Логин:"
               Margin="10,10,10,0"
               VerticalAlignment="Center" />
        <TextBox x:Name="LoginTextBox"
                 Grid.Row="2"
                 Grid.Column="1"
                 Width="200"
                 HorizontalAlignment="Left"
                 Margin="10,10,10,0" MaxLength="50" />

        <!-- Password Information -->
        <Label Grid.Row="3"
               Grid.Column="0"
               Content="Пароль:"
               Margin="10,10,10,0"
               VerticalAlignment="Center" />
        <TextBox x:Name="PasswordTextBox"
                 Grid.Row="3"
                 Grid.Column="1"
                 Width="200"
                 HorizontalAlignment="Left"
                 Margin="10,10,10,0" />

        <!-- Role Selection -->
        <Label Grid.Row="4"
               Grid.Column="0"
               Content="Роль:"
               Margin="10,10,10,0"
               VerticalAlignment="Center" />
        <ComboBox x:Name="RoleComboBox"
                  Grid.Row="4"
                  Grid.Column="1"
                  Width="200"
                  HorizontalAlignment="Left"
                  Margin="10,10,10,0"
                  DisplayMemberPath="RoleName"
SelectedValuePath="RoleID" />

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Сохранить"
                    Margin="5"
                    Width="100" Click="SaveButton_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         MappingMode="RelativeToBoundingBox"
                                         StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"
                                                ScaleX="-1" />
                                <SkewTransform AngleY="1"
                                               AngleX="1" />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF80B3C3" Offset="1" />
                        <GradientStop Color="White" Offset="0.224" />
                        <GradientStop Color="#FFB8DFF1" Offset="0.788" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Отмена"
                    Margin="5"
                    Width="100" Click="CancelButton_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         MappingMode="RelativeToBoundingBox"
                                         StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"
                                                ScaleX="-1" />
                                <SkewTransform AngleY="1"
                                               AngleX="1" />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FF80B3C3" Offset="1" />
                        <GradientStop Color="White" Offset="0.224" />
                        <GradientStop Color="#FFB8DFF1" Offset="0.788" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>